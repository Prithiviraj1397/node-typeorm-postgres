{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && pm2 start ecosystem.config.json --no-daemon",
    "build": "tsc",
    "dev": "nodemon --exec ts-node ./src",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migrations": "npm run typeorm migration:run -- -d ./src/orm/config/ormconfig.ts",
    "migration:generate": "npm run typeorm -- -d ./src/orm/config/ormconfig.ts migration:generate ./src/orm/migrations/migrations",
    "migration:create": "npm run typeorm -- migration:create ./src/orm/migrations/custom_migration_table",
    "migration:run": "npm run typeorm migration:run -- -d ./src/orm/config/ormconfig.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/orm/config/ormconfig.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "http-status": "^1.7.4",
    "pg": "^8.11.5",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
